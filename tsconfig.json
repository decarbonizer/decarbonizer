{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}
